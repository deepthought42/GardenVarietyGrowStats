<div class="container">
<header class="clearfix">
	<h1>Plants</h1>	
	<%= form_tag mushrooms_path, :method => 'get' do %>
		<p>
			<%= text_field_tag :search, params[:search] %>
			<%= submit_tag "Search", :variety => nil %>
		</p>
	<% end %>
</header>	
<div class="main">
	<div id="cbp-vm" class="cbp-vm-switcher cbp-vm-view-grid">
		<ul>
		<% @plants.each do |plant| %>
			<li>
				
				<a class="cbp-vm-image" href="#"><%= image_tag plant.picture.url(:thumb) %></a>
				<h3 class="cbp-vm-title">
					<%= plant.variety %><br />
				</h3>
				<div class="cbp-vm-details">
					<%= plant.latin_name %>
				</div>
				<div class="cbp-vm-details">
					<%= plant.description %>
				</div>
				<div>
					<%= link_to 'Show', plant, {:class=>"cbp-vm-icon cbp-vm-add"}%>
					<%= link_to 'Edit', edit_plant_path(plant), {:class=>"cbp-vm-icon cbp-vm-add"} %>
					<%= link_to 'Destroy', plant, {:class => "cbp-vm-icon cbp-vm-add"}, method: :delete, data: { confirm: 'Are you sure?' } %></td>
				</div>
			</li>
		<% end %>
		</ul>
	</div>
</div><!-- /main -->
</div><!-- /container -->

