<div class="container">
<header class="clearfix">
	<h1>Plants</h1>	
	<input type="textfield" ng-model="query" />
</header>	
<div class="main">
	<div id="cbp-vm" class="cbp-vm-switcher cbp-vm-view-grid">
		<div ng-controller="PlantListCtrl">
			<ul>
				<li ng-repeat="plant in plants | filter:query">
					<a href="#/plants/{{plant.id}}" class="thumb"><img src="https://s3-us-west-2.amazonaws.com/elasticbeanstalk-us-west-2-600707264672/images/thumbs/plants/{{plant.picture_file_name}}"></a>
					<h3 class="cbp-vm-title">
						{{plant.variety }}<br />
					</h3>
					<div class="cbp-vm-details">
						{{ plant.latin_name }}
					</div>
					<div class="cbp-vm-details">
						{{ plant.description }}
					</div>
					<div>
						
					</div>
				</li>
			</ul>
		</div>
	
		<ul>		
			<% @plants.each do |plant| %>
				<div>
					<%= link_to 'Show', plant, {:class=>"cbp-vm-icon cbp-vm-add"}%>
					<%= link_to 'Edit', edit_plant_path(plant), {:class=>"cbp-vm-icon cbp-vm-add"} %>
					<%= link_to 'Destroy', plant, {:class => "cbp-vm-icon cbp-vm-add"}, method: :delete, data: { confirm: 'Are you sure?' } %></td>
				</div>
			<% end %>
		</ul>
	</div>
</div><!-- /main -->
</div><!-- /container -->

